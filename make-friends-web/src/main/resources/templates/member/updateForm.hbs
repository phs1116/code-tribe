<body>
{{> layouts/navbar}}
<div class="content col-md-4 col-md-offset-4">
    <!--//{{#block "content"}}{{/block}}-->
    <form action="/members/save" method="POST">
        <div class="form-group">
            <label class ="inputUserId">Username</label>
            <div class=="col-sm-10">
                <p class="form-control-static">{{memberInfo.userId}}</p>
            </div>
            <input type="hidden" name="userId" value="{{memberInfo.userId}}">
        </div>
        <div class="form-group">
            <label for="inputNickname">Nickname</label>
            <input type="text" class="form-control" value="{{memberInfo.nickname}}"
                   name="nickname" id="inputNickname" placeholder="닉네임">
        </div>

        <div class="form-group">
            <label for="inputOldPassword">Password</label>
            <input type="password" class="form-control" name="password" id="inputOldPassword" placeholder="비밀번호">
        </div>

        <div class="form-group">
            <label for="inputPassword">New Password</label>
            <input type="password" class="form-control" name="newPassword" id="inputPassword" placeholder="새 비밀번호">
        </div>
        <div class="form-group">
            <label for="inputPasswordConfirm">New Password Confirm</label>
            <input type="password" class="form-control" id="inputPasswordConfirm" placeholder="새 비밀번호 확인">
        </div>
        <div class="form-group">
            <label for="inputPhoneNum">Phone Number</label>
            <input type="tels" class="form-control"  value="{{memberInfo.phoneNumber}}" name="phoneNumber" id="inputPhoneNum" placeholder="이메일">
        </div>
        <div class="form-group">
            <label for="inputEmail">Email Address</label>
            <input type="email" class="form-control" value="{{memberInfo.email}}" name="email" id="inputEmail" placeholder="이메일">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>

